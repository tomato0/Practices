<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gionee.practices.MainActivity">

    <Button
        android:id="@+id/button_adv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ViewPager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animation"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_adv"
        app:layout_constraintStart_toEndOf="@+id/button_adv" />

    <Button
        android:id="@+id/button_recycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="RecycleView"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_anim"
        app:layout_constraintStart_toEndOf="@+id/button_anim" />

    <Button
        android:id="@+id/button_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="Event"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_adv" />

    <Button
        android:id="@+id/button_rxjava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="RxJava"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_event"
        app:layout_constraintStart_toEndOf="@+id/button_event" />

</android.support.constraint.ConstraintLayout>
